@model IEnumerable<CodingCraftHOMod1Ex1EF.Models.ProdutoLoja>

@{
    ViewBag.Title = "Pesquisar";
}

<h2>Pesquisar</h2>

@using (Html.BeginForm())
{
    <p>
        Filtro: @Html.TextBox("Filtro")
        <input type="submit" value="Pesquisar" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Loja.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Produto.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataUltimaModificacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsuarioUltimaModificacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCriacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsuarioCriacao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Loja.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Produto.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataUltimaModificacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UsuarioUltimaModificacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataCriacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UsuarioCriacao)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProdutoLojaId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProdutoLojaId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProdutoLojaId })
        </td>
    </tr>
}

</table>
